                                </select>
                                <span class="text-danger field-validation-valid" data-valmsg-for="Color" data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="TypeOfClothes">Тип одягу</label>
                                <select asp-for="TypeOfClothes" class="form-control" asp-items="Html.GetEnumSelectList<TypesOfClothes>()" >
                                 <option value="Виберіть тип"></option>
                                </select>
                                <span class="text-danger field-validation-valid" data-valmsg-for="TypeOfClothes" data-valmsg-replace="true"></span>
                            </div>

                             <div class="form-group">
                                <label class="control-label" for="TypeOfClothes">Сезон</label>
                                <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<ClothingCategory>()" >
                                 <option value="Виберіть категорію"></option>
                                </select>
                                <span class="text-danger field-validation-valid" data-valmsg-for="TypeOfClothes" data-valmsg-replace="true"></span>
                            </div>

                             <div class="form-group">
                                <label class="control-label" for="TypeOfClothes">Для кого</label>
                                <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()" >
                                 <option value="Виберіть стать"></option>
                                </select>
                                <span class="text-danger field-validation-valid" data-valmsg-for="TypeOfClothes" data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label"  asp-for="SellerName">Ім'я продавця</label>
                                <input class="form-control inpt" type="text" data-val="true" data-val-required="The SellerName field is required." id="SellerName" name="SellerName" value="" />
                                <span class="text-danger field-validation-valid" data-valmsg-for="SellerName" data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="Price">Ціна(грн)</label>
                                <input class="form-control inpt"  asp-for="Price" data-val="true" data-val-required="The Price field is required." id="Price" name="Price" value="" />
                                <span class="text-danger field-validation-valid" data-valmsg-for="Price" data-valmsg-replace="true"></span>
                            </div>   
                            <div class="form-submit">
                                <input type="submit" value="Опублікувати" class="btn_btn-primary" />
                            </div>
