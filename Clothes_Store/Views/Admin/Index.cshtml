@using ClassLibrary
@using DbAccessLibrary.Models
@using System.IO
@model List<Clothes>



@foreach (var item in Model)
{
  
        var imgSrc =FunctionsLib.GetImageSourceFromBytes(item.PreviewImage);
        <img src="@imgSrc" style=" max-height:1000px; max-width:700px;"  />
         <input type="button" style=" margin:5px" class="btn btn-primary" value="Delete"
         onclick="location.href='@Url.Action("DeleteClothes", "Admin", new {id = @item.Id})'" />
}