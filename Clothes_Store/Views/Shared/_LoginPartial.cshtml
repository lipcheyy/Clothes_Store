@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <li class="item"> 
        <a  asp-controller="MyAccount" asp-action="Index" class="hover-underline-animation" >@User.Identity.Name</a>
        </li>
        <li class="item"> 
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
              <li class="item button secondary"><button class="btn" type="submit">Log Out</button> </li>
        </form>
        </li>
}
else
{
    <li class="item button secondary"> 
        <a class="btn" asp-area="Identity" asp-page="/Account/Login">Log In</a>
    </li>

    <li class="item button"> 
        <a class="btn" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
    </li>
}
