<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clothes_Store</title>
  @*  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">

</head>
<body>
    <header>
      <nav>
        <ul class="menu">
          <li class="logo">
            <a href="#"
              ><img src="~/Images/logo.png" alt="" class="logotype" />GATI</a
            >
          </li>
          <li class="item">
            <form action="#" class="search">
              <input type="text" placeholder=" Пошук по сайту" />
            </form>
          </li>
          <li class="item">
            <a asp-controller="MyAccount" asp-action="Index"
              ><i class="fa fa-user" aria-hidden="true"></i> Профіль</a>
          </li>
          <li class="item"><a href="#">ПРО нас</a></li>
          <li class="item has-submenu">
            <a tabindex="0">Категорії товарів</a>
            <ul class="submenu">
              <li class="subitem"><a href="#">Футболки</a></li>
              <li class="subitem"><a href="#">Сорочки</a></li>
              <li class="subitem"><a href="#">Штани</a></li>
              <li class="subitem"><a href="#">Кросівки</a></li>
            </ul>
          </li>
          <li class="item"><a asp-controller="Admin" asp-action="AddClothes">Адмін панель</a></li>
          <li class="item">
            <a href="#"><i class="fas fa-lightbulb"></i></a>
          </li>

          <li class="item button"><a asp-area="Identity" asp-page="/Account/Login"class="btn">Log In</a></li>
          <li class="item button secondary">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn">Sign Up</a>
          </li>
          <li class="toggle">
            <a href="#"><i class="fas fa-bars"></i></a>
          </li>
        </ul>
      </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/slick.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
